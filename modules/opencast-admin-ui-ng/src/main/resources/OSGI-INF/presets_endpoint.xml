  <property name="service.description" value="Admin UI - Presets Endpoint" />

  <property name="opencast.service.type" value="org.opencast.adminui.endpoint.PresetsEndpoint" />
  <property name="opencast.service.path" value="/admin-ng/presets" />
  <service>
    <provide interface="org.opencast.adminui.endpoint.PresetsEndpoint" />
  </service>

  <reference name="PresetService" interface="org.opencast.presets.api.PresetProvider"
        cardinality="1..1" policy="static" bind="setPresetProvider" />
</scr:component>
