<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0"
 name="org.opencast.adminui.endpoint.JobEndpoint" immediate="true" activate="activate">
  <implementation class="org.opencast.adminui.endpoint.JobEndpoint" />
  <property name="service.description" value="Admin UI - Job facade Endpoint" />
  
  <property name="opencast.service.type" value="org.opencast.adminui.endpoint.JobEndpoint" />
  <property name="opencast.service.path" value="/admin-ng/job" />
  <service>
    <provide interface="org.opencast.adminui.endpoint.JobEndpoint" />
  </service>

    <reference name="workflowService" interface="org.opencast.workflow.api.WorkflowService"
          cardinality="1..1" policy="static" bind="setWorkflowService"/>   
    <reference name="serviceRegistry" interface="org.opencast.serviceregistry.api.ServiceRegistry"
          cardinality="1..1" policy="static" bind="setServiceRegistry"/>    
    <reference name="incidentService" interface="org.opencast.serviceregistry.api.IncidentService"
          cardinality="1..1" policy="static" bind="setIncidentService"/>    
</scr:component>
