<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0"
	name="org.opencast.adminui.endpoint.GroupsEndpoint" immediate="true"
	activate="activate">
	<implementation class="org.opencast.adminui.endpoint.GroupsEndpoint" />
	<property name="service.description" value="Admin UI - Groups facade Endpoint" />

	<property name="opencast.service.type" value="org.opencast.adminui.endpoint.GroupsEndpoint" />
	<property name="opencast.service.path" value="/admin-ng/groups" />
	<service>
		<provide interface="org.opencast.adminui.endpoint.GroupsEndpoint" />
	</service>
	
  <reference name="securityService" interface="org.opencast.security.api.SecurityService"
    cardinality="1..1" policy="static" bind="setSecurityService" />
  <reference name="userDirectoryService" interface="org.opencast.security.api.UserDirectoryService"
      cardinality="1..1" policy="static" bind="setUserDirectoryService"/>
  <reference name="IndexService" interface="org.opencast.index.service.api.IndexService"
      cardinality="1..1" policy="static" bind="setIndexService"/>
  <reference name="AdminUISearchIndex" interface="org.opencast.adminui.impl.index.AdminUISearchIndex"
      cardinality="1..1" policy="static" bind="setSearchIndex"/>
</scr:component>
