<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0"
 name="org.opencast.adminui.endpoint.TasksEndpoint" immediate="true" activate="activate">
  <implementation class="org.opencast.adminui.endpoint.TasksEndpoint" />
  <property name="service.description" value="Admin UI - Tasks facade Endpoint" />
  
  <property name="opencast.service.type" value="org.opencast.adminui.endpoint.TasksEndpoint" />
  <property name="opencast.service.path" value="/admin-ng/tasks" />
  <service>
    <provide interface="org.opencast.adminui.endpoint.TasksEndpoint" />
  </service>

  <reference name="workflowService" interface="org.opencast.workflow.api.WorkflowService"
    cardinality="1..1" policy="static" bind="setWorkflowService"/>
  <reference name="workspace" interface="org.opencast.workspace.api.Workspace"
    cardinality="1..1" policy="static" bind="setWorkspace"/>
  <reference name="assetManager" interface="org.opencast.assetmanager.api.AssetManager"
    cardinality="1..1" policy="static" bind="setAssetManager" />
</scr:component>
