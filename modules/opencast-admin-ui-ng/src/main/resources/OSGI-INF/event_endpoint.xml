<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0"
               name="org.opencast.adminui.endpoint.OsgiEventEndpoint"
               immediate="true" activate="activate">
  <implementation class="org.opencast.adminui.endpoint.OsgiEventEndpoint" />
  <property name="service.description" value="Admin UI - Event facade Endpoint" />
  <property name="opencast.service.type" value="org.opencast.adminui.endpoint.event" />
  <property name="opencast.service.path" value="/admin-ng/event" />
  
  <service>
    <!-- expose interface for MH REST publisher! -->
    <provide interface="org.opencast.adminui.endpoint.OsgiEventEndpoint" />
    <provide interface="org.osgi.service.cm.ManagedService" />
  </service>
  <reference bind="setAdminUIConfiguration"
             cardinality="1..1"
             interface="org.opencast.adminui.impl.AdminUIConfiguration"
             name="adminUIConfiguration"
             policy="static" />
  <reference bind="setWorkflowService"
             cardinality="1..1"
             interface="org.opencast.workflow.api.WorkflowService"
             name="workflowService"
             policy="static" />
  <reference name="jobService"
             interface="org.opencast.adminui.endpoint.JobEndpoint"
             cardinality="1..1"
             policy="static"
             bind="setJobService" />
  <reference name="AclServiceFactory"
             interface="org.opencast.authorization.xacml.manager.api.AclServiceFactory"
             cardinality="1..1"
             policy="static"
             bind="setAclServiceFactory" />
  <reference name="EventCommentService"
             interface="org.opencast.event.comment.EventCommentService"
             cardinality="1..1"
             policy="static"
             bind="setEventCommentService" />
  <reference name="SecurityService"
             interface="org.opencast.security.api.SecurityService"
             cardinality="1..1"
             policy="static"
             bind="setSecurityService" />
  <reference name="AuthorizationService"
             interface="org.opencast.security.api.AuthorizationService"
             cardinality="1..1"
             policy="static"
             bind="setAuthorizationService" />
  <reference name="SchedulerService"
             interface="org.opencast.scheduler.api.SchedulerService"
             cardinality="1..1"
             policy="static"
             bind="setSchedulerService" />
  <reference name="CaptureAgentStateService"
             interface="org.opencast.capture.admin.api.CaptureAgentStateService"
             cardinality="1..1"
             policy="static"
             bind="setCaptureAgentStateService" />
  <reference name="IndexService"
             interface="org.opencast.index.service.api.IndexService"
             cardinality="1..1"
             policy="static"
             bind="setIndexService" />
 <reference name="AdminUISearchIndex" 
             interface="org.opencast.adminui.impl.index.AdminUISearchIndex"
             cardinality="1..1" 
             policy="static" 
             bind="setIndex" />
 <reference name="UrlSigningService" 
             interface="org.opencast.security.urlsigning.service.UrlSigningService"
             cardinality="1..1" 
             policy="static" 
             bind="setUrlSigningService" />
</scr:component>
