<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0"
 name="org.opencast.adminui.endpoint.SeriesEndpoint" immediate="true" activate="activate">
  <implementation class="org.opencast.adminui.endpoint.SeriesEndpoint" />
  <property name="service.description" value="Admin UI - Series list Endpoint" />

  <property name="opencast.service.type" value="org.opencast.adminui.endpoint.SeriesEndpoint" />
  <property name="opencast.service.path" value="/admin-ng/series" />
  <service>
    <provide interface="org.opencast.adminui.endpoint.SeriesEndpoint" />
  </service>

   <reference name="AclServiceFactory" interface="org.opencast.authorization.xacml.manager.api.AclServiceFactory"
          cardinality="1..1" policy="static" bind="setAclServiceFactory" />
   <reference name="AdminUISearchIndex" interface="org.opencast.adminui.impl.index.AdminUISearchIndex"
          cardinality="1..1" policy="static" bind="setIndex" />
   <reference name="IndexService" interface="org.opencast.index.service.api.IndexService"
          cardinality="1..1" policy="static" bind="setIndexService" />
   <reference name="participation" interface="org.opencast.pm.api.persistence.ParticipationManagementDatabase"
          cardinality="0..1" policy="dynamic" bind="setPersistence"/>
   <reference name="SecurityService" interface="org.opencast.security.api.SecurityService"
          cardinality="1..1" policy="static" bind="setSecurityService" />
   <reference name="seriesService" interface="org.opencast.series.api.SeriesService"
          cardinality="1..1" policy="static" bind="setSeriesService"/>

</scr:component>
