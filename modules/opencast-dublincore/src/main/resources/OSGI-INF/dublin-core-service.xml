<?xml version="1.0" encoding="UTF-8"?>
<scr:component
  xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0"
  name="org.opencast.metadata.dublincore.DublinCoreCatalogService"
  immediate="true"
  activate="activate">
    <implementation class="org.opencast.metadata.dublincore.DublinCoreCatalogService" />
    <property name="service.description" value="Dublin Core Catalog Service" />
    <property name="priority" value="1" />
    <service>
      <provide interface="org.opencast.metadata.api.CatalogService" />
      <provide interface="org.opencast.metadata.api.MediaPackageMetadataService" />
      <provide interface="org.opencast.metadata.dublincore.DublinCoreCatalogService" />
    </service>
    <reference name="workspace" interface="org.opencast.workspace.api.Workspace"
      cardinality="1..1" policy="static" bind="setWorkspace" />
</scr:component>
