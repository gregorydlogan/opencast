<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0"
 name="org.opencast.workflow.handler.textanalyzer.TextAnalysisWorkflowOperationHandler" immediate="true">
  <implementation class="org.opencast.workflow.handler.textanalyzer.TextAnalysisWorkflowOperationHandler" />
  <property name="service.description" value="Text Analysis Workflow Operation Handler" />
  <property name="workflow.operation" value="extract-text" />
  <service>
    <provide interface="org.opencast.workflow.api.WorkflowOperationHandler" />
    <provide interface="org.osgi.service.cm.ManagedService" />
  </service>
  <reference cardinality="1..1" interface="org.opencast.textanalyzer.api.TextAnalyzerService"
    name="TextAnalysisService" policy="static" bind="setTextAnalyzer" />
  <reference cardinality="1..1" interface="org.opencast.workspace.api.Workspace"
    name="Workspace" policy="static" bind="setWorkspace"/>
  <reference name="Mpeg7Service" interface="org.opencast.metadata.mpeg7.Mpeg7CatalogService"
    cardinality="1..1" policy="static" bind="setMpeg7CatalogService" />
  <reference name="Composer" cardinality="1..1" interface="org.opencast.composer.api.ComposerService"
    policy="static" bind="setComposerService" />
  <reference name="ServiceRegistry" cardinality="1..1" interface="org.opencast.serviceregistry.api.ServiceRegistry"
    policy="static" bind="setServiceRegistry" />
</scr:component>
