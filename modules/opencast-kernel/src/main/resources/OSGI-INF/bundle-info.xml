<?xml version="1.0" encoding="UTF-8"?>
<scr:components xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0">
  <scr:component name="org.opencast.kernel.bundleinfo.BundleInfoLogger"
                 activate="activate" deactivate="deactivate"
                 immediate="true">
    <implementation class="org.opencast.kernel.bundleinfo.BundleInfoLogger" />
    <reference name="bundleInfoDb"
               interface="org.opencast.kernel.bundleinfo.BundleInfoDb"
               cardinality="1..1"
               policy="static"
               bind="setDb"
               unbind="unsetDb" />
  </scr:component>

  <scr:component name="org.opencast.kernel.bundleinfo.OsgiBundleInfoDb" activate="activate" immediate="true">
    <implementation class="org.opencast.kernel.bundleinfo.OsgiBundleInfoDb" />
    <service>
      <provide interface="org.opencast.kernel.bundleinfo.BundleInfoDb" />
    </service>
    <reference name="entityManagerFactory"
        interface="javax.persistence.EntityManagerFactory"
        target="(osgi.unit.name=org.opencast.kernel)"
        cardinality="1..1"
        policy="static"
        bind="setEntityManagerFactory" />
  </scr:component>

  <scr:component name="org.opencast.kernel.bundleinfo.OsgiBundleInfoRestEndpoint" immediate="true">
    <implementation class="org.opencast.kernel.bundleinfo.OsgiBundleInfoRestEndpoint" />
    <property name="service.description" value="System BundleInfo REST Endpoint" />
    <property name="opencast.service.type" value="org.opencast.kernel.bundleinfo" />
    <property name="opencast.service.path" value="/sysinfo" />
    <service>
      <!-- Needed for the RestPublisher to pick up the service. -->
      <provide interface="org.opencast.kernel.bundleinfo.OsgiBundleInfoRestEndpoint" />
    </service>
    <reference name="bundleInfoDb"
               interface="org.opencast.kernel.bundleinfo.BundleInfoDb"
               cardinality="1..1"
               policy="static"
               bind="setDb" />
  </scr:component>
</scr:components>
