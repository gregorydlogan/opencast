  <reference name="service-impl" interface="org.opencast.series.api.SeriesService"
    cardinality="1..1" policy="static" bind="setService" />    
  <reference name="dc" interface="org.opencast.metadata.dublincore.DublinCoreCatalogService"
    cardinality="1..1" policy="static" bind="setDublinCoreService" /> 
