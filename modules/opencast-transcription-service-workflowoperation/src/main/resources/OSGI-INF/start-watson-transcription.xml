<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0"
 name="org.opencast.transcription.workflowoperation.StartTranscriptionOperationHandler" immediate="true" activate="activate">
  <implementation class="org.opencast.transcription.workflowoperation.StartTranscriptionOperationHandler" />
  <property name="service.description" value="Start Transcription Workflow Operation Handler" />
  <property name="workflow.operation" value="start-watson-transcription" />
  <service>
    <provide interface="org.opencast.workflow.api.WorkflowOperationHandler" />
  </service>
  <reference name="ServiceRegistry" cardinality="1..1" interface="org.opencast.serviceregistry.api.ServiceRegistry"
    policy="static" bind="setServiceRegistry" />
  <reference cardinality="1..1" interface="org.opencast.transcription.api.TranscriptionService"
    name="TranscriptionService" policy="static" target="(provider=ibm.watson)" bind="setTranscriptionService"/> 
</scr:component>
