<?xml version="1.0" encoding="UTF-8"?>
<scr:components xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0">
  <scr:component name="org.opencast.messages.MailService" immediate="true">
    <implementation class="org.opencast.messages.MailService" />
    <property name="service.description" value="Mail Service" />
    <service>
      <provide interface="org.opencast.messages.MailService" />
    </service>
    <reference name="securityService" interface="org.opencast.security.api.SecurityService"
      cardinality="1..1" policy="static" bind="setSecurityService" />
    <reference name="user-directory" interface="org.opencast.security.api.UserDirectoryService"
      cardinality="1..1" policy="static" bind="setUserDirectoryService" />
    <reference name="orgDirectoryService" interface="org.opencast.security.api.OrganizationDirectoryService"
      cardinality="1..1" policy="static" bind="setOrganizationDirectoryService" />
    <reference name="entityManagerFactory" interface="javax.persistence.EntityManagerFactory"
        target="(osgi.unit.name=org.opencast.messages)" cardinality="1..1" policy="static" bind="setEntityManagerFactory" />
  </scr:component>
</scr:components>