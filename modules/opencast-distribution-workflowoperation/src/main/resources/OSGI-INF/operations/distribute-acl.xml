<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0"
 name="org.opencast.workflow.handler.distribution.DistributeAclWorkflowOperationHandler" immediate="true">
  <implementation class="org.opencast.workflow.handler.distribution.DistributeWorkflowOperationHandler" />
  <property name="service.description" value="Local Distribution Workflow Handler" />
  <property name="workflow.operation" value="distribute-acl" />
  <service>
    <provide interface="org.opencast.workflow.api.WorkflowOperationHandler" />
  </service>
  <reference cardinality="1..1" interface="org.opencast.distribution.api.DistributionService"
  name="DistributionService" policy="static" target="(distribution.channel=acl)" bind="setDistributionService"/>
  <reference name="ServiceRegistry" cardinality="1..1" interface="org.opencast.serviceregistry.api.ServiceRegistry"
    policy="static" bind="setServiceRegistry" />
  <reference name="AuthorizationService" cardinality="1..1" interface="org.opencast.security.api.AuthorizationService"
    policy="static" bind="setAuthorizationService" />
</scr:component>
