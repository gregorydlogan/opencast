<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0"
               name="org.opencast.workflow.handler.distribution.RetractOaiPmhWorkflowOperationHandler"
               immediate="true"
               activate="activate">
  <implementation class="org.opencast.workflow.handler.distribution.RetractOaiPmhWorkflowOperationHandler"/>
  <property name="service.description" value="OAI-PMH Retraction Workflow Operation Handler"/>
  <property name="workflow.operation" value="retract-oaipmh"/>
  <service>
    <provide interface="org.opencast.workflow.api.WorkflowOperationHandler"/>
  </service>
  <reference cardinality="1..1" interface="org.opencast.publication.api.OaiPmhPublicationService"
    name="PublicationService" policy="static" bind="setPublicationService"/>
  <reference cardinality="1..1" interface="org.opencast.serviceregistry.api.ServiceRegistry"
    name="ServiceRegistry" policy="static" bind="setServiceRegistry"/>
</scr:component>
