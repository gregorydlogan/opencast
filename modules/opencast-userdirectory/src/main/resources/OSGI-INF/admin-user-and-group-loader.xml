<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0"
  name="org.opencast.userdirectory.AdminUserAndGroupLoader" immediate="true" activate="activate">
  <implementation class="org.opencast.userdirectory.AdminUserAndGroupLoader" />
  <property name="service.description" value="System admin user and group loader" />
  <service>
    <provide interface="org.opencast.userdirectory.AdminUserAndGroupLoader" />
  </service>
  <reference name="groupRoleProvider" interface="org.opencast.userdirectory.JpaGroupRoleProvider"
    policy="static" cardinality="1..1" bind="setGroupRoleProvider" />
  <reference name="userAndRoleProvider" interface="org.opencast.userdirectory.JpaUserAndRoleProvider"
    policy="static" cardinality="1..1" bind="setUserAndRoleProvider" />
  <reference name="organizationDirectoryService" interface="org.opencast.security.api.OrganizationDirectoryService"
    policy="static" cardinality="1..1" bind="setOrganizationDirectoryService" />
  <reference name="security-service" interface="org.opencast.security.api.SecurityService"
    cardinality="1..1" policy="static" bind="setSecurityService" />
</scr:component>
