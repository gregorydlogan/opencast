<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0"
  name="org.opencast.scheduler.conflict.notifier.email.EmailSchedulerConflictNotifier" configuration-policy="require" immediate="true" activate="activate">
  <implementation class="org.opencast.scheduler.conflict.notifier.email.EmailSchedulerConflictNotifier" />
  <property name="service.description" value="Email Scheduler Conflict Notifier" />
  <service>
    <provide interface="org.osgi.service.cm.ManagedService" />
    <provide interface="org.opencast.scheduler.api.ConflictNotifier" />
  </service>
  <reference name="smtp-service" interface="org.opencast.kernel.mail.SmtpService"
    cardinality="1..1" policy="static" bind="setSmtpService" />
  <reference name="security-service" interface="org.opencast.security.api.SecurityService"
    cardinality="1..1" policy="static" bind="setSecurityService" />
  <reference name="workspace" interface="org.opencast.workspace.api.Workspace"
    cardinality="1..1" policy="static" bind="setWorkspace" />
  <reference name="event-catalog-ui-adapter" interface="org.opencast.metadata.dublincore.EventCatalogUIAdapter"
    cardinality="0..n" policy="dynamic" bind="addCatalogUIAdapter" unbind="removeCatalogUIAdapter" />
</scr:component>
