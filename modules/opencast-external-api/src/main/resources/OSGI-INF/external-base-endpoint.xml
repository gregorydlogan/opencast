<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0"
               name="org.opencast.external.endpoint.BaseEndpoint"
               immediate="true" activate="activate">
  <implementation class="org.opencast.external.endpoint.BaseEndpoint" />
  <property name="service.description" value="External API - Base Endpoint" />
  <property name="opencast.service.type" value="org.opencast.external" />
  <property name="opencast.service.path" value="/api" />
  <service>
    <!-- expose interface for MH REST publisher! -->
    <provide interface="org.opencast.external.endpoint.BaseEndpoint" />
  </service>
  <reference name="SecurityService"
             interface="org.opencast.security.api.SecurityService"
             cardinality="1..1"
             policy="static"
             bind="setSecurityService" />
  <reference name="ExternalIndex"
             interface="org.opencast.external.impl.index.ExternalIndex"
             cardinality="1..1"
             policy="static"
             bind="setExternalIndex" />
</scr:component>
