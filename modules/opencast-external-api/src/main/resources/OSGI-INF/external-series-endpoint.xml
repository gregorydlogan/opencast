<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0"
               name="org.opencast.external.endpoint.SeriesEndpoint"
               immediate="true" activate="activate">
  <implementation class="org.opencast.external.endpoint.SeriesEndpoint" />
  <property name="service.description" value="External API - Series Endpoint" />
  <property name="opencast.service.type" value="org.opencast.external" />
  <property name="opencast.service.path" value="/api/series" />
  <service>
    <!-- expose interface for MH REST publisher! -->
    <provide interface="org.opencast.external.endpoint.SeriesEndpoint" />
  </service>
  <reference name="ExternalIndex"
      interface="org.opencast.external.impl.index.ExternalIndex"
      cardinality="1..1"
      policy="static"
      bind="setExternalIndex" />
  <reference name="IndexService"
      interface="org.opencast.index.service.api.IndexService"
      cardinality="1..1"
      policy="static"
      bind="setIndexService" />
  <reference name="SecurityService"
      interface="org.opencast.security.api.SecurityService"
      cardinality="1..1"
      policy="static"
      bind="setSecurityService" />
  <reference name="SeriesService"
      interface="org.opencast.series.api.SeriesService"
      cardinality="1..1"
      policy="static"
      bind="setSeriesService" />
</scr:component>
