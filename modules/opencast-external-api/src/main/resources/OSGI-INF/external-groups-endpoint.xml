<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0"
               name="org.opencast.external.endpoint.GroupsEndpoint"
               immediate="true" activate="activate">
  <implementation class="org.opencast.external.endpoint.GroupsEndpoint" />
  <property name="service.description" value="External API - Groups Endpoint" />
  <property name="opencast.service.type" value="org.opencast.external.groups" />
  <property name="opencast.service.path" value="/api/groups" />
  <service>
    <!-- expose interface for MH REST publisher! -->
    <provide interface="org.opencast.external.endpoint.GroupsEndpoint" />
  </service>
  <reference name="ExternalIndex"
			interface="org.opencast.external.impl.index.ExternalIndex"
			cardinality="1..1"
			policy="static"
			bind="setExternalIndex" />
  <reference name="IndexService"
			interface="org.opencast.index.service.api.IndexService"
			cardinality="1..1"
			policy="static"
			bind="setIndexService" />
</scr:component>
