<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0"
 name="org.opencast.serviceregistry.remote.IncidentServiceRemoteImpl" immediate="true" activate="activate">
  <implementation class="org.opencast.serviceregistry.remote.IncidentServiceRemoteImpl" />
  <property name="service.description" value="Remote incident service" />
  
  <property name="opencast.service.type" value="org.opencast.incident" />
  <property name="opencast.service.path" value="/incidents" />
  
  <service>
    <provide interface="org.opencast.serviceregistry.api.IncidentService" />
  </service>
  <reference name="trustedHttpClient" interface="org.opencast.security.api.TrustedHttpClient"
    cardinality="1..1" policy="static" bind="setTrustedHttpClient" />
  <reference name="remoteServiceManager" interface="org.opencast.serviceregistry.api.ServiceRegistry" 
    cardinality="1..1" policy="static" bind="setRemoteServiceManager" />
</scr:component>