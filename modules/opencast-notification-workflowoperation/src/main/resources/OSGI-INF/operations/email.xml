<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0"
  name="org.opencast.workflow.handler.notification.EmailWorkflowOperationHandler" immediate="true">
  <implementation class="org.opencast.workflow.handler.notification.EmailWorkflowOperationHandler" />
  <property name="service.description" value="Sends an email with the parameters indicated" />
  <property name="workflow.operation" value="send-email" />
  <service>
    <provide interface="org.opencast.workflow.api.WorkflowOperationHandler" />
  </service>
  <reference name="smtpservice" interface="org.opencast.kernel.mail.SmtpService" policy="static" cardinality="1..1" bind="setSmtpService" />
  <reference name="EmailTemplateService" interface="org.opencast.email.template.api.EmailTemplateService" policy="static" cardinality="1..1" bind="setEmailTemplateService" />
  <reference name="ServiceRegistry" cardinality="1..1" interface="org.opencast.serviceregistry.api.ServiceRegistry"
    policy="static" bind="setServiceRegistry" />
</scr:component>
