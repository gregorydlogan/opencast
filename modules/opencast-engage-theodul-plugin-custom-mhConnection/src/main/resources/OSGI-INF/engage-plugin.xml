<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0"
 name="org.opencast.engage.theodul.plugin.custom.mhConnection" 
 immediate="true"
 activate="activate">
  <implementation class="org.opencast.engage.theodul.plugin.custom.mhConnection.EngagePluginCustomMhConnection" />
  
  <!-- Engage Plugin Properties: at least name and path must be set -->
  <property name="opencast.engage.plugin.name" value="EngagePluginCustomMhConnection" />
  <property name="opencast.engage.plugin.description" value="Handles Matterhorns Endpoints" />
  <property name="opencast.engage.plugin.rest" value="false" />
  
  <service>
    <provide interface="org.opencast.engage.theodul.api.EngagePlugin" />
  </service>
  
  <!-- Referencing the PluginManager so that SCR will only activates all the 
       plugins when the Engage Plugin infrastructure is happy and running. --> 
  <reference name="PluginManager" interface="org.opencast.engage.theodul.api.EngagePluginManager"
    cardinality="1..1" policy="static" bind="setPluginManager" />
</scr:component>
