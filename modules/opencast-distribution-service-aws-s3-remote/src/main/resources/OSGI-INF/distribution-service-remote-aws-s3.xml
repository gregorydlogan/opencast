<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0"
  name="org.opencast.distribution.aws.s3.remote.AwsS3DistributionServiceRemoteImpl" immediate="true" activate="activate">
  <implementation
    class="org.opencast.distribution.aws.s3.remote.AwsS3DistributionServiceRemoteImpl" />
  <property name="service.description" value="Distribution (AWS S3) Remote Service Proxy" />
  <property name="distribution.channel" value="aws.s3" />
  <service>
    <provide interface="org.opencast.distribution.api.DistributionService" />
    <provide interface="org.opencast.distribution.api.DownloadDistributionService" />
    <provide interface="org.opencast.distribution.aws.s3.api.AwsS3DistributionService" />
  </service>
  <reference name="trustedHttpClient" interface="org.opencast.security.api.TrustedHttpClient"
    cardinality="1..1" policy="static" bind="setTrustedHttpClient" />
  <reference name="remoteServiceManager" interface="org.opencast.serviceregistry.api.ServiceRegistry" 
    cardinality="1..1" policy="static" bind="setRemoteServiceManager" />  
</scr:component>
