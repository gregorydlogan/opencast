<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0"
               name="org.opencast.serviceregistry.impl.OsgiIncidentService"
               immediate="true"
               activate="activate"
               deactivate="deactivate">
  <implementation class="org.opencast.serviceregistry.impl.OsgiIncidentService" />
  <property name="service.description" value="Incident service" />
  <service>
    <provide interface="org.opencast.serviceregistry.api.IncidentService" />
  </service>
  <reference name="entityManagerFactory"
             interface="javax.persistence.EntityManagerFactory"
             target="(osgi.unit.name=org.opencast.serviceregistry)"
             cardinality="1..1"
             policy="static"
             bind="setEntityManagerFactory" />
  <reference name="serviceRegistry"
             interface="org.opencast.serviceregistry.api.ServiceRegistry"
             cardinality="1..1"
             policy="static"
             bind="setServiceRegistry" />
  <reference name="workflowService"
             interface="org.opencast.workflow.api.WorkflowService"
             cardinality="1..1"
             policy="static"
             bind="setWorkflowService" />
</scr:component>
