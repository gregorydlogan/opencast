<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0"
               name="org.opencast.message.broker.endpoint.MessageBrokerServiceEndpoint"
               immediate="true">
  <implementation class="org.opencast.message.broker.endpoint.MessageBrokerServiceEndpoint" />
  <property name="service.description" value="Message Broker REST Endpoint" />
  <property name="opencast.service.type" value="org.opencast.message.broker.endpoint" />
  <property name="opencast.service.path" value="/broker" />
  <service>
    <!-- expose interface for MH REST publisher! -->
    <provide interface="org.opencast.message.broker.endpoint.MessageBrokerServiceEndpoint" />
  </service>
  <reference name="messageReceuver" interface="org.opencast.message.broker.api.MessageReceiver"
        cardinality="1..1" policy="static" bind="setMessageReceiver" />
  <reference name="messageSender" interface="org.opencast.message.broker.api.MessageSender"
        cardinality="1..1" policy="static" bind="setMessageSender" />
</scr:component>
