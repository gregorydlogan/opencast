<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0"
               name="org.opencast.index.service.impl.IndexServiceImpl"
               immediate="true">
  <implementation class="org.opencast.index.service.impl.IndexServiceImpl" />
  <property name="service.description" value="Index Services Implementation" />
  <service>
    <provide interface="org.opencast.index.service.api.IndexService" />
  </service>

 <reference name="AclServiceFactory"
             interface="org.opencast.authorization.xacml.manager.api.AclServiceFactory"
             cardinality="1..1"
             policy="static"
             bind="setAclServiceFactory" />
  <reference name="AuthorizationService"
             interface="org.opencast.security.api.AuthorizationService"
             cardinality="1..1"
             policy="static"
             bind="setAuthorizationService" />
  <reference name="CaptureAgentStateService"
             interface="org.opencast.capture.admin.api.CaptureAgentStateService"
             cardinality="1..1"
             policy="static"
             bind="setCaptureAgentStateService" />
  <reference name="CommonEventCatalogUIAdapter"
             interface="org.opencast.index.service.catalog.adapter.events.CommonEventCatalogUIAdapter"
             cardinality="1..1"
             policy="static"
             bind="setCommonEventCatalogUIAdapter" />
  <reference name="EventCatalogUIAdapter"
             interface="org.opencast.metadata.dublincore.EventCatalogUIAdapter"
             cardinality="0..n"
             policy="dynamic"
             bind="addCatalogUIAdapter"
             unbind="removeCatalogUIAdapter" />
  <reference name="EventCommentService"
             interface="org.opencast.event.comment.EventCommentService"
             cardinality="1..1"
             policy="static"
             bind="setEventCommentService"/>
  <reference name="IngestService"
             interface="org.opencast.ingest.api.IngestService"
             cardinality="1..1"
             policy="static"
             bind="setIngestService" />
  <reference bind="setAssetManager"
             cardinality="1..1"
             interface="org.opencast.assetmanager.api.AssetManager"
             name="AssetManager"
             policy="static" />
  <reference name="SchedulerService"
             interface="org.opencast.scheduler.api.SchedulerService"
             cardinality="1..1"
             policy="static"
             bind="setSchedulerService" />
  <reference name="SecurityService"
             interface="org.opencast.security.api.SecurityService"
             cardinality="1..1"
             policy="static"
             bind="setSecurityService" />
  <reference name="CommonSeriesCatalogUIAdapter"
             interface="org.opencast.index.service.catalog.adapter.series.CommonSeriesCatalogUIAdapter"
             cardinality="1..1"
             policy="static"
             bind="setCommonSeriesCatalogUIAdapter" />
  <reference name="SeriesCatalogUIAdapter"
             interface="org.opencast.metadata.dublincore.SeriesCatalogUIAdapter"
             cardinality="0..n"
             policy="dynamic"
             bind="addCatalogUIAdapter"
             unbind="removeCatalogUIAdapter" />
  <reference name="SeriesService"
             interface="org.opencast.series.api.SeriesService"
             cardinality="1..1"
             policy="static"
             bind="setSeriesService" />
  <reference bind="setWorkflowService"
             cardinality="1..1"
             interface="org.opencast.workflow.api.WorkflowService"
             name="workflowService"
             policy="static" />
  <reference bind="setWorkspace"
             cardinality="1..1"
             interface="org.opencast.workspace.api.Workspace"
             name="workspace"
             policy="static" />
  <reference name="groupRoleProvider"
             cardinality="1..1"
             interface="org.opencast.userdirectory.JpaGroupRoleProvider"
             bind="setGroupRoleProvider"
             policy="static"  />
  <reference name="userDirectoryService"
             interface="org.opencast.security.api.UserDirectoryService"
             cardinality="1..1"
             policy="static"
             bind="setUserDirectoryService" />

</scr:component>
