<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0"
	name="org.opencast.transcription.ibmwatson.endpoint.IBMWatsonTranscriptionRestService"
	immediate="true" activate="activate">
	<implementation
		class="org.opencast.transcription.ibmwatson.endpoint.IBMWatsonTranscriptionRestService" />
	<property name="service.description" value="IBM Watson Transcription REST Endpoint" />
	<property name="opencast.service.type" value="org.opencast.transcription.ibmwatson" />
	<property name="opencast.service.path" value="/transcripts/watson" />
	<property name="opencast.service.jobproducer" value="true" />

	<service>
		<provide
			interface="org.opencast.transcription.ibmwatson.endpoint.IBMWatsonTranscriptionRestService" />
	</service>
	<reference name="transcriptionService"
		interface="org.opencast.transcription.ibmwatson.IBMWatsonTranscriptionService"
		cardinality="1..1" policy="static" bind="setTranscriptionService" />
	<reference name="serviceRegistry"
		interface="org.opencast.serviceregistry.api.ServiceRegistry"
		cardinality="1..1" policy="static" bind="setServiceRegistry" />
</scr:component>
