<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0"
        name="org.opencast.authorization.xacml.manager.impl.OsgiAclServiceFactory" immediate="true" activate="activate" deactivate="deactivate">
  <implementation class="org.opencast.authorization.xacml.manager.impl.OsgiAclServiceFactory" />
  <property name="service.description" value="Factory to create ACL services for storage and scheduling on a per organization basis" />
  <service>
    <provide interface="org.opencast.authorization.xacml.manager.api.AclServiceFactory" />
  </service>
  <reference name="acl-db" interface="org.opencast.authorization.xacml.manager.impl.AclDb"
          cardinality="1..1" policy="static" bind="setAclDb"/>
  <reference name="authorization-service" interface="org.opencast.security.api.AuthorizationService"
          cardinality="1..1" policy="static" bind="setAuthorizationService"/>
  <reference name="asset-manager" interface="org.opencast.assetmanager.api.AssetManager"
          cardinality="1..1" policy="dynamic" bind="setAssetManager"/>
  <reference name="security-service" interface="org.opencast.security.api.SecurityService"
          cardinality="1..1" policy="static" bind="setSecurityService"/>
  <reference name="series-service" interface="org.opencast.series.api.SeriesService"
          cardinality="1..1" policy="static" bind="setSeriesService"/>
  <reference name="transition-db" interface="org.opencast.authorization.xacml.manager.impl.AclTransitionDb"
    	  cardinality="1..1" policy="static" bind="setTransitionDb" />
  <reference name="workflow-service" interface="org.opencast.workflow.api.WorkflowService"
    	  cardinality="1..1" policy="static" bind="setWorkflowService" />
  <reference name="workspace" interface="org.opencast.workspace.api.Workspace"
    	  cardinality="1..1" policy="static" bind="setWorkspace" />
  <reference name="message-receiver" interface="org.opencast.message.broker.api.MessageReceiver"
          cardinality="1..1" policy="static" bind="setMessageReceiver"/>
  <reference name="message-sender" interface="org.opencast.message.broker.api.MessageSender"
          cardinality="1..1" policy="static" bind="setMessageSender"/>
  <reference name="organization-directory-service" interface="org.opencast.security.api.OrganizationDirectoryService"
          cardinality="1..1" policy="static" bind="setOrganizationDirectoryService" />
</scr:component>
