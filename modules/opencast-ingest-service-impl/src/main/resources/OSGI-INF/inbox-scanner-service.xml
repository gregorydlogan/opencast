<?xml version="1.0" encoding="UTF-8"?>
<!--
  attribute configuration-policy="require"
    A configuration object must exist in the Configuration Admin service, i.e
    you have to provide a $FELIX_HOME/load/rg.opencast.ingest.scanner.InboxScanner-XXX.cfg
-->
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0"
  name="org.opencast.ingest.scanner.InboxScannerService"
  immediate="true"
  activate="activate"
  deactivate="deactivate"
  configuration-policy="require">
  <implementation class="org.opencast.ingest.scanner.InboxScannerService"/>
  <property name="service.pid" value="org.opencast.ingest.scanner.InboxScannerService"/>
  <property name="service.description" value="Inbox Scanner"/>
  <service>
    <provide interface="org.apache.felix.fileinstall.ArtifactInstaller"/>
    <provide interface="org.osgi.service.cm.ManagedService"/>
  </service>
  <reference name="ingest" interface="org.opencast.ingest.api.IngestService"
    cardinality="1..1" policy="static" bind="setIngestService"/>
  <reference name="working-file-repository"
    interface="org.opencast.workingfilerepository.api.WorkingFileRepository"
    cardinality="1..1" policy="static" bind="setWorkingFileRepository"/>
  <reference name="security-service" interface="org.opencast.security.api.SecurityService"
    cardinality="1..1" policy="static" bind="setSecurityService"/>
  <reference name="user-directory" interface="org.opencast.security.api.UserDirectoryService"
    cardinality="1..1" policy="static" bind="setUserDirectoryService"/>
  <reference name="orgDirectory" interface="org.opencast.security.api.OrganizationDirectoryService"
    cardinality="1..1" policy="static" bind="setOrganizationDirectoryService"/>
</scr:component>
