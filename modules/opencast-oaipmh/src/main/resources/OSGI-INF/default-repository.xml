<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0"
               name="org.opencast.oaipmh.server.DefaultRepository"
               immediate="true"
               activate="activate">
  <implementation class="org.opencast.oaipmh.server.DefaultRepository" />
  <service>
    <provide interface="org.opencast.oaipmh.server.OaiPmhRepository" />
  </service>
  <property name="service.description" value="Matterhorn default OAI-PMH repository" />
  <property name="service.pid" value="org.opencast.oaipmh.server.DefaultRepository" />
  <reference name="persistence"
             interface="org.opencast.oaipmh.persistence.OaiPmhDatabase"
             cardinality="1..1"
             policy="static"
             bind="setPersistence" />
</scr:component>
