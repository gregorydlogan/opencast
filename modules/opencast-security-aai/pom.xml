<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <artifactId>opencast-security-aai</artifactId>
  <name>opencast-security-aai</name>
  <packaging>bundle</packaging>
  <parent>
    <groupId>org.opencast</groupId>
    <artifactId>base</artifactId>
    <version>4.0-SNAPSHOT</version>
    <relativePath>../../pom.xml</relativePath>
  </parent>
  <properties>
    <matterhorn.basedir>${project.basedir}/../..</matterhorn.basedir>
    <checkstyle.skip>false</checkstyle.skip>
  </properties>
  <dependencies>
    <dependency>
      <groupId>org.opencast</groupId>
      <artifactId>opencast-security-shibboleth</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.opencast</groupId>
      <artifactId>opencast-userdirectory</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>javax.servlet-api</artifactId>
    </dependency>
    <dependency>
      <groupId>org.osgi</groupId>
      <artifactId>org.osgi.core</artifactId>
    </dependency>
    <dependency>
      <groupId>org.osgi</groupId>
      <artifactId>org.osgi.compendium</artifactId>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
            <Build-Number>${buildNumber}</Build-Number>
            <Import-Package>
              org.osgi.framework,
              org.apache.commons.lang3,
              org.opencast.userdirectory;version=${project.version},
              org.opencast.userdirectory.api;version=${project.version},
              org.opencast.kernel.security.persistence;version=${project.version},
              org.opencast.security.api;version=${project.version},
              org.opencast.security.impl.jpa;version=${project.version},
              org.opencast.security.shibboleth;version=${project.version},
              javax.servlet.http,
              org.slf4j,
              *
            </Import-Package>
            <Fragment-Host>opencast-kernel</Fragment-Host>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
