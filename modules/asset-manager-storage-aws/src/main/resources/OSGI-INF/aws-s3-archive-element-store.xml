<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0"
 name="org.opencastproject.archive.aws.s3.AwsS3ArchiveElementStore" activate="activate" immediate="true">
  <implementation class="org.opencastproject.archive.aws.s3.AwsS3ArchiveElementStore" />
  <property name="service.description" value="Amazon S3 based archive element store" />
  <property name="store.type" value="aws-s3" />
  <service>
    <provide interface="org.opencastproject.archive.base.storage.RemoteElementStore" />
    <provide interface="org.opencastproject.archive.aws.s3.AwsS3ArchiveElementStore" />
  </service>

  <reference name="workspace" interface="org.opencastproject.workspace.api.Workspace" policy="static"
    cardinality="1..1" bind="setWorkspace" />
  <reference name="database" interface="org.opencastproject.archive.aws.persistence.AwsArchiveDatabase" policy="static"
             cardinality="1..1" bind="setDatabase" />
</scr:component>
