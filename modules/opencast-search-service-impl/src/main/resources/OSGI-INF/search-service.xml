<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0"
 name="org.opencast.search.impl.SearchServiceImpl" immediate="true" activate="activate" deactivate="deactivate">
  <implementation class="org.opencast.search.impl.SearchServiceImpl" />
  <property name="service.description" value="Search Service" />
  <property name="service.pid" value="org.opencast.search.impl.SearchServiceImpl" />
  <service>
    <provide interface="org.opencast.search.api.SearchService" />
    <provide interface="org.opencast.search.impl.SearchServiceImpl" />
    <provide interface="org.osgi.service.cm.ManagedService" />
  </service>
  <reference name="staticMetadata"
          interface="org.opencast.metadata.api.StaticMetadataService"
          cardinality="1..n"
          policy="dynamic"
          bind="setStaticMetadataService"
          unbind="unsetStaticMetadataService"/>
  <reference name="search-persistence" interface="org.opencast.search.impl.persistence.SearchServiceDatabase"
	      cardinality="1..1" policy="static" bind="setPersistence" />    
  <reference name="mpeg7" interface="org.opencast.metadata.mpeg7.Mpeg7CatalogService"
          cardinality="1..1" policy="static" bind="setMpeg7CatalogService" />
  <reference name="series" interface="org.opencast.series.api.SeriesService"
          cardinality="1..1" policy="static" bind="setSeriesService" />
  <reference name="workspace" interface="org.opencast.workspace.api.Workspace"
          cardinality="1..1" policy="static" bind="setWorkspace"/>
  <reference name="authorization" interface="org.opencast.security.api.AuthorizationService"
          cardinality="1..1" policy="static" bind="setAuthorizationService"/>
  <reference name="security" interface="org.opencast.security.api.SecurityService"
          cardinality="1..1" policy="static" bind="setSecurityService"/>
  <reference name="serviceRegistry" interface="org.opencast.serviceregistry.api.ServiceRegistry"
          cardinality="1..1" policy="static" bind="setServiceRegistry"/>
  <reference name="orgDirectory" interface="org.opencast.security.api.OrganizationDirectoryService"
          cardinality="1..1" policy="static" bind="setOrganizationDirectoryService" />
  <reference name="user-directory" interface="org.opencast.security.api.UserDirectoryService"
          cardinality="1..1" policy="static" bind="setUserDirectoryService" />
  <reference name="url-rewriter" interface="org.opencast.mediapackage.MediaPackageSerializer"
          cardinality="0..1" policy="dynamic" bind="setMediaPackageSerializer" />
</scr:component>
